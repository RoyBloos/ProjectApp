<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notities_list_view"
            android:background="@color/teal050"
            android:dividerHeight="20.0sp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="hr.dinfnot.NotitiesOverzichtActivity"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/notitietoevoegen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_notitie_toevoegen"
            android:background="@color/teal700"
            />


    <!--</RelativeLayout>-->

</RelativeLayout>