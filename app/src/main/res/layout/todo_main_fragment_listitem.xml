<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundLight"
    android:minHeight="50dp"
    android:orientation="horizontal"
    tools:context="hr.dinfnot.TodosMainFragmentListItem"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/bar"
            android:focusable="false"
            android:gravity="start"
            android:orientation="vertical" />

        <CheckBox
            android:id="@+id/list_item_todo_chkGedaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center_vertical|start"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_todo_txtTitel"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:focusable="false"
            android:gravity="center_vertical|start"
            android:text="Titelasd"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_todo_txtDatum"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="20"
            android:focusable="false"
            android:gravity="center_vertical|end"
            android:text="17 Maart"
            android:textColor="@color/colorText"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
